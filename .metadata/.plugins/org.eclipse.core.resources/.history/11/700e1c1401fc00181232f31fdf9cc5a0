			builder.append(tmpBall.getPosX() + " " + tmpBall.getPosY() + " ");
		}
		
		builder.append(opponentToMoveBalls.size());
		builder.append(" ");
		for (Ball tmpBall : opponentToMoveBalls) {
			builder.append(tmpBall.getPosX() + " " + tmpBall.getPosY() + " ");
		}
		
		return builder.toString();
		
	}

