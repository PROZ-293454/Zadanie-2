	private static String makeMsgString(List<Ball> chosenBalls, List<Ball> opponentToMoveBalls, Move move) {
		StringBuilder builder = new StringBuilder();
		builder.append(move.id());
		builder.append(" ");
		builder.append(chosenBalls.size());
		builder.append(" ");
