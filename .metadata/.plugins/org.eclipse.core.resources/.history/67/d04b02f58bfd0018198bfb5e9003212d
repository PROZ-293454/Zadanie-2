package Model;

import view.Color;

public class Ball {
	private Color color;
	private int x;
	private int y;

	public Ball(Color color, int x, int y) {
		super();
		this.color = color;
		this.x = x;
		this.y = y;
	}

	public int getX() {
		return x;
	}

	public int getY() {
		return y;
	}

	public Color getColor() {
		return color;
	}

}
