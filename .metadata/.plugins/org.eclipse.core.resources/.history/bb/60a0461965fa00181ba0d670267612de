package controller;

public enum Move {
	E(0, 2, 0, 0), SE(1, 1, 1, 60), SW(2, -1, 1, 120), W(3, -2, 0, 180), NW(4, -1, -1, 240), NE(5, 1, -1, 300);
	private int id, dx, dy, angle;

	Move(int id, int dx, int dy, int angle) {
		this.id = id;
		this.dx = dx;
		this.dy = dy;
		this.angle = angle;
	}

	public int id() {
		return id;
	}

	public int dx() {
		return dx;
	}

	public int dy() {
		return dy;
	}

	public int angle() {
		return angle;
	}
	
	public Move getFromID(int id) {
		switch (id) {
		case 0 : return E;
		case 1 : return SE;
		case 2 : return SW;
		case 3 : return W;
		case 4 : return NW;
		case 5 : return NE;
		default : return null;
	}
};