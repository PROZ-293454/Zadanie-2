package model;

import java.util.ArrayList;

import view.BlackBall;

public class ListOfBlackBalls extends ArrayList<BlackBall>{
	
	public BlackBall getBall (int posX, int posY) {
		for (int i=0; i<this.size(); i++) {
			BlackBall ball = this.get(i);
			if (ball.getPosX() == posX && ball.getPosY() == posY ) return ball;			
		}
		return null;
	}
}
